{
    "manifest_version": 2,
    "name": "HBO Max - AutoSkip",
    "version": "1.0",

    "description": "Automatically skips intros and endings of any episode on HBO Max!",

    "icons": {
        "48": "icons/skip-48.png",
        "96": "icons/skip-96.png"
    },

    "content_scripts": [
        {
            "matches": [
                "*://*.hbomax.com/*",
                "*://*.max.com/*"
            ],
            "js": ["autoskipper.js"]
        }       
    ]
}